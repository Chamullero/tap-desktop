<window:PopUpWindow x:Class="TheAirline.GraphicsModel.UserControlModel.PopUpWindowsModel.PopUpAirlinerRoutes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:window="clr-namespace:TheAirline.GraphicsModel.UserControlModel.PopUpWindowsModel"
        Title="PopUpAirlinerRoutes" Height="300" Width="300">
    <Window.Resources>
        <SolidColorBrush x:Key="FlightItemColor" Opacity="0.2" Color="Red"></SolidColorBrush>
        <DataTemplate x:Key="FlightItem">
                 <TextBlock VerticalAlignment="Center" Width="{Binding Key}" Height="20" Background="{DynamicResource FlightItemColor}" HorizontalAlignment="Center" FontWeight="Bold">
                     <TextBlock.Text>
        <MultiBinding
            StringFormat="{}{0}-{1}"
            >
             <Binding Path="Value.DepartureAirport.Profile.IATACode" />
            <Binding Path="Value.Destination.Airport.Profile.IATACode" />
         </MultiBinding>
    </TextBlock.Text>

                </TextBlock>
      

        </DataTemplate>
    </Window.Resources>
    <Grid>
        
    </Grid>
</window:PopUpWindow>
