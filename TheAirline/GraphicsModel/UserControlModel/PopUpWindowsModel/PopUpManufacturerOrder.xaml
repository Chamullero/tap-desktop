<window:PopUpWindow x:Class="TheAirline.GraphicsModel.UserControlModel.PopUpWindowsModel.PopUpManufacturerOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:window="clr-namespace:TheAirline.GraphicsModel.UserControlModel.PopUpWindowsModel"
                 
        Title="PopUpManufactorerOrder" Height="300" Width="300">
    <Window.Resources>
        <window:AirlinersPriceConverter x:Key="airlinersPriceConverter"></window:AirlinersPriceConverter>
        <DataTemplate x:Key="AirlinerOrderItem">
            <WrapPanel>
                 <TextBlock Text="{Binding Key.Name}" VerticalAlignment="Bottom" Width="200"></TextBlock>
                <TextBlock Text="{Binding Value,StringFormat=Amount: {0}}" VerticalAlignment="Bottom" Width="100"></TextBlock>
                <TextBlock Text="{Binding Converter={StaticResource airlinersPriceConverter},StringFormat={}{0:c}}" TextAlignment="Right" VerticalAlignment="Bottom" Width="100"></TextBlock>
                <Button Background="Transparent" Tag="{Binding Key}" Click="btnRemove_Click" Margin="5 0 0 0">
                    <Image Source="/Data/images/delete.png" Height="16" Width="16" RenderOptions.BitmapScalingMode="HighQuality"></Image>
                </Button>
            </WrapPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        
    </Grid>
</window:PopUpWindow>
